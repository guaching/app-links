<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="post">
                        <div class="form-group">
                            <input class="form-control" type="text" name="title" placeholder="Title" autofocus>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="url" name="url" placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <div class="btn btn-primary form-group">Enviar</div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>